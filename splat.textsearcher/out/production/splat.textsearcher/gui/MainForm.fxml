<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TreeView?>
<?import javafx.scene.control.TextArea?>
<GridPane id="RootGrid" gridLinesVisible="true" maxWidth="Infinity"
  xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.MainController">
  <rowConstraints>
    <RowConstraints/>
    <RowConstraints/>
  </rowConstraints>
  <columnConstraints>
    <ColumnConstraints/>
  </columnConstraints>
  <children>
    <GridPane id="Buttons" alignment="BOTTOM_CENTER" maxWidth="Infinity" GridPane.rowIndex="0">
      <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
        <ColumnConstraints/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
      </rowConstraints>
      <children>
        <Text fx:id="dirPath" text="Путь до файла" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Text fx:id="extension" text="Расширение файла" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <TextField GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Text text="Сообщение" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="message" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <Button fx:id="btnSearch" onAction="#click" text="Search" GridPane.columnIndex="3"
          GridPane.rowIndex="0"
          GridPane.rowSpan="2"/>
      </children>
    </GridPane>
    <GridPane id="WorkArea" GridPane.rowIndex="1">
      <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
      </columnConstraints>
      <children>
        <TreeView GridPane.columnIndex="0"/>
        <TextArea GridPane.columnIndex="1"/>
      </children>
    </GridPane>
  </children>
</GridPane>
